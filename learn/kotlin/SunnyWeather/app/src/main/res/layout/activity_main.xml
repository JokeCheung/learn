<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/webView_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebView"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/retrofitDeserialize_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retrofitDeserialize"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/webView_btn"
            app:layout_constraintStart_toStartOf="@+id/webView_btn"
            app:layout_constraintTop_toBottomOf="@+id/webView_btn" />
    </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/http_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HttpURLConnection"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/webView_btn"
                app:layout_constraintStart_toStartOf="@+id/webView_btn"
                app:layout_constraintTop_toBottomOf="@+id/webView_btn" />
            <Button
                android:id="@+id/okhttp_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="okHttp"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/webView_btn"
                app:layout_constraintStart_toStartOf="@+id/webView_btn"
                app:layout_constraintTop_toBottomOf="@+id/webView_btn" />
            <Button
                android:id="@+id/retrofit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retrofit"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/webView_btn"
                app:layout_constraintStart_toStartOf="@+id/webView_btn"
                app:layout_constraintTop_toBottomOf="@+id/webView_btn" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>